{
  "id": "text.json",
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Text",
  "description": "A chunk of text which can be annotated with measurement data like the extracted text and it's length",
  "type": [
    "object"
  ],
  "properties": {
    "id": {
      "$ref": "base.json#/definitions/uuid"
    },
    "type": {
      "description": "Block type",
      "example": "text",
      "type": "string",
      "enum": [
        "text",
        "code",
        "quote",
        "hr",
        "unknown"
      ]
    },
    "html": {
      "$ref": "contentblock.json#/definitions/html"
    },
    "text": {
      "description": "Extracted text",
      "example": "Foo bar",
      "type": "string"
    },
    "length": {
      "description": "Length of extracted text",
      "example": 7,
      "type": "integer"
    }
  },
  "required": [
    "type",
    "html"
  ]
}